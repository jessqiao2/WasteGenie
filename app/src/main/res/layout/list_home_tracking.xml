<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relTrack"
        android:layout_width="632dp"
        android:layout_height="101dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/searchview_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTrackLocation"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="237dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="51dp"
            android:fontFamily="@font/public_sans_bold"
            android:text="Location example"
            android:textAlignment="viewEnd"
            android:textColor="#5E5E5E"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvTrackDateTime"
            android:layout_width="301dp"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="320dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/public_sans_bold"
            android:text="12:20PM 28-09-23"
            android:textAlignment="textStart"
            android:textColor="#2196F3"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvTrackStatus"
            android:layout_width="561dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/public_sans_bold"
            android:text="Bin Flagged as EXAMPLE"
            android:textAlignment="textStart"
            android:textColor="#F44336"
            android:textSize="25sp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>