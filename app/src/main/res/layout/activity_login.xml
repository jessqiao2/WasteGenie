<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="1814dp"
        android:layout_height="1117dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.69"
        app:layout_constraintStart_toEndOf="@+id/relativeLayout5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/login_waste_collection" />

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="983dp"
        android:layout_height="1080dp"
        android:background="#CCE6FB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="457dp"
            android:layout_height="139dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="44dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="482dp"
            android:layout_marginBottom="741dp"
            app:srcCompat="@drawable/wastegenie_logo" />

        <TextView
            android:id="@+id/tvLoginDesc"
            android:layout_width="901dp"
            android:layout_height="151dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="384dp"
            android:layout_marginEnd="37dp"
            android:layout_marginBottom="545dp"
            android:fontFamily="@font/public_sans_bold"
            android:lineSpacingExtra="10sp"
            android:text="Tracking and Managing E-Waste For Your Company"
            android:textColor="#0460A1"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/tvLoginDesc2"
            android:layout_width="592dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="194dp"
            android:layout_marginTop="226dp"
            android:layout_marginEnd="197dp"
            android:layout_marginBottom="728dp"
            android:fontFamily="@font/public_sans_bold"
            android:text="WasteGenie"
            android:textColor="#0460A1"
            android:textSize="54sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="901dp"
            android:layout_height="83dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="574dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="423dp"
            android:background="@drawable/searchview_background">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLoginEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="30sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="901dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="691dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="309dp"
            android:background="@drawable/searchview_background"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLoginPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="30sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btLogin"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="283dp"
            android:layout_marginTop="828dp"
            android:layout_marginEnd="305dp"
            android:layout_marginBottom="192dp"
            android:background="@drawable/button_blue"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="298dp"
            android:layout_marginTop="922dp"
            android:layout_marginEnd="337dp"
            android:layout_marginBottom="125dp"
            android:text="Don't have an account?"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvLoginSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="556dp"
            android:layout_marginTop="922dp"
            android:layout_marginEnd="328dp"
            android:layout_marginBottom="125dp"
            android:fontFamily="@font/public_sans_bold"
            android:text=" Sign Up"
            android:textColor="#0460A1"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvLoginForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="744dp"
            android:layout_marginTop="789dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="258dp"
            android:text="Forgot Password?"
            android:textSize="25sp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>