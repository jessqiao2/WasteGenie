<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relAnalysis"
        android:layout_width="767dp"
        android:layout_height="78dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/searchview_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvDropOffLocation"
            android:layout_width="492dp"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="121dp"
            android:fontFamily="@font/public_sans_bold"
            android:text="Loading ..."
            android:textAlignment="viewStart"
            android:textColor="#5E5E5E"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvDropOffDistance"
            android:layout_width="106dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="523dp"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="13dp"
            android:fontFamily="@font/public_sans_bold"
            android:text="Loading ..."
            android:textAlignment="viewEnd"
            android:textColor="#4CAF50"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvDropOffName"
            android:layout_width="550dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="62dp"
            android:fontFamily="@font/public_sans_bold"
            android:text="Loading Site ..."
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="20sp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>